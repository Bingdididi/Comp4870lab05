@page
@model AddUserToRoleModel

<form method="post">
    <div class="form-group">
        <label for="Email">Email</label>
        <select asp-for="Email" asp-items="Model.Emails" class="form-control"></select>
    </div>
    <div class="form-group">
        <label for="RoleName">Role Name</label>
        <select asp-for="RoleName" asp-items="Model.Roles" class="form-control"></select>
    </div>
    <button type="submit" class="btn btn-primary">Add User to Role</button>
</form>
