@page
@model RolesModel

<h2>Roles</h2>

<table class="table">
    <thead>
        <tr>
            <th>Role Name</th>
            <th>Description</th>
            <th>Created Date</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var role in Model.RolesList)
    {
        <tr>
            <td>@role.Name</td>
            <td>@role.Description</td>
            <td>@role.CreatedDate.ToShortDateString()</td>
        </tr>
    }
    </tbody>
</table>
